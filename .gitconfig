[user]
    name = Abdullah Bajwa
    email = abdullah.muhammad.bajwa@gmail.com

[core]
    editor = hx
    autocrlf = input
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    line-numbers = true
    syntax-theme = Dracula

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[pull]
    rebase = false

[init]
    defaultBranch = main

[gpg]
    format = ssh

[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
    gpgsign = true

[tag]
    gpgsign = true

[include]
    path = ~/.gitconfig.custom
[credential "https://github.com"]
	helper = 
	helper = !/Users/abdullahbajwa/.nix-profile/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/Users/abdullahbajwa/.nix-profile/bin/gh auth git-credential
