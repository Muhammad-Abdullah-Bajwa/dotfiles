// ~/.config/zellij/config.kdl

// Basic settings
default_shell "fish"
pane_frames false
theme "modus_vivendi"
simplified_ui true
default_layout "compact"
on_force_close "quit"
copy_on_select true
session_serialization false
disable_session_metadata true
show_startup_tips false

// Keybindings
keybinds {
    normal clear-defaults=true {
        // Leader key: Ctrl+Space (like your Neovim)
        bind "Ctrl Space" { SwitchToMode "tmux"; }
    }

    tmux clear-defaults=true {
        // Exit tmux mode
        bind "Esc" { SwitchToMode "normal"; }
        bind "Ctrl Space" { SwitchToMode "normal"; }

        // Tab management (like harpoon)
        bind "c" { NewTab; SwitchToMode "normal"; }
        bind "x" { CloseTab; SwitchToMode "normal"; }
        bind "r" { SwitchToMode "RenameTab"; }

        // Quick tab switching (harpoon-style)
        bind "1" { GoToTab 1; SwitchToMode "normal"; }
        bind "2" { GoToTab 2; SwitchToMode "normal"; }
        bind "3" { GoToTab 3; SwitchToMode "normal"; }
        bind "4" { GoToTab 4; SwitchToMode "normal"; }
        bind "5" { GoToTab 5; SwitchToMode "normal"; }
        bind "6" { GoToTab 6; SwitchToMode "normal"; }
        bind "7" { GoToTab 7; SwitchToMode "normal"; }
        bind "8" { GoToTab 8; SwitchToMode "normal"; }
        bind "9" { GoToTab 9; SwitchToMode "normal"; }

        // Tab navigation
        bind "n" { GoToNextTab; SwitchToMode "normal"; }
        bind "p" { GoToPreviousTab; SwitchToMode "normal"; }
        bind "Tab" { GoToNextTab; SwitchToMode "normal"; }
        bind "h" { GoToPreviousTab; SwitchToMode "normal"; }
        bind "l" { GoToNextTab; SwitchToMode "normal"; }

        // Panes (for when you need them)
        bind "v" { NewPane "Right"; SwitchToMode "normal"; }
        bind "s" { NewPane "Down"; SwitchToMode "normal"; }
        bind "z" { ToggleFocusFullscreen; SwitchToMode "normal"; }
        bind "w" { CloseFocus; SwitchToMode "normal"; }

        // Floating panes
        bind "f" { ToggleFloatingPanes; SwitchToMode "normal"; }
        bind "e" { TogglePaneEmbedOrFloating; SwitchToMode "normal"; }

        // Pane navigation
        bind "Left" { MoveFocus "Left"; SwitchToMode "normal"; }
        bind "Right" { MoveFocus "Right"; SwitchToMode "normal"; }
        bind "Up" { MoveFocus "Up"; SwitchToMode "normal"; }
        bind "Down" { MoveFocus "Down"; SwitchToMode "normal"; }

        // Session management
        bind "d" { Detach; }
        bind "q" { Quit; }
    }

    renametab {
        bind "Esc" { UndoRenameTab; SwitchToMode "normal"; }
        bind "Enter" { SwitchToMode "normal"; }
    }
}

// Clean startup - no default panes
// Remove or comment out if you want the default layout

// ==============================================================================
// THEME: Modus Vivendi
// ==============================================================================
// WCAG AAA accessible dark theme from modus-themes.nvim
// https://github.com/miikanissi/modus-themes.nvim
themes {
    modus_vivendi {
        fg "#ffffff"
        bg "#2f3849"
        black "#000000"
        red "#ff5f59"
        green "#44bc44"
        yellow "#d0bc00"
        blue "#2fafff"
        magenta "#feacd0"
        cyan "#00d3d0"
        white "#ffffff"
        orange "#fec43f"
    }
}
