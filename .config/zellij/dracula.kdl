// Dracula theme for Zellij
// https://draculatheme.com
//
// Palette reference:
//   fg:         #f8f8f2 (248, 248, 242) - white
//   bg:         #282a36 (40, 42, 54)    - dark gray
//   current:    #44475a (68, 71, 90)    - selection/current line
//   comment:    #6272a4 (98, 114, 164)  - muted blue
//   cyan:       #8be9fd (139, 233, 253)
//   green:      #50fa7b (80, 250, 123)
//   orange:     #ffb86c (255, 184, 108)
//   pink:       #ff79c6 (255, 121, 198)
//   purple:     #bd93f9 (189, 147, 249)
//   red:        #ff5555 (255, 85, 85)
//   yellow:     #f1fa8c (241, 250, 140)

themes {
    dracula {
        ribbon_unselected {
            base 248 248 242        // fg
            background 40 42 54     // bg
            emphasis_0 255 121 198  // pink
            emphasis_1 189 147 249  // purple
            emphasis_2 80 250 123   // green
            emphasis_3 139 233 253  // cyan
        }
        ribbon_selected {
            base 248 248 242
            background 68 71 90     // current/selection
            emphasis_0 255 121 198
            emphasis_1 189 147 249
            emphasis_2 80 250 123
            emphasis_3 139 233 253
        }
        text_unselected {
            base 248 248 242
            background 40 42 54
            emphasis_0 255 121 198
            emphasis_1 189 147 249
            emphasis_2 80 250 123
            emphasis_3 139 233 253
        }
        text_selected {
            base 248 248 242
            background 68 71 90
            emphasis_0 255 121 198
            emphasis_1 189 147 249
            emphasis_2 80 250 123
            emphasis_3 139 233 253
        }
        table_title {
            base 248 248 242
