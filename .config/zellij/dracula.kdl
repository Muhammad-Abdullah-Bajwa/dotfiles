            emphasis_3 139 233 253
        }
        frame_selected {
            base 189 147 249        // purple for active frame
            background 40 42 54
            emphasis_0 255 121 198
            emphasis_1 189 147 249
            emphasis_2 80 250 123
            emphasis_3 139 233 253
        }
        exit_code_success {
            base 80 250 123         // green
            background 40 42 54
            emphasis_0 80 250 123
            emphasis_1 80 250 123
            emphasis_2 80 250 123
            emphasis_3 80 250 123
        }
        exit_code_error {
            base 255 85 85          // red
            background 40 42 54
            emphasis_0 255 85 85
            emphasis_1 255 85 85
            emphasis_2 255 85 85
            emphasis_3 255 85 85
        }
        frame_highlight {
            base 255 121 198        // pink
            background 40 42 54
            emphasis_0 255 121 198
            emphasis_1 189 147 249
            emphasis_2 80 250 123
            emphasis_3 139 233 253
        }
        multiplayer_user_colors {
            player_1 255 121 198    // pink
            player_2 189 147 249    // purple
            player_3 80 250 123     // green
            player_4 139 233 253    // cyan
            player_5 241 250 140    // yellow
